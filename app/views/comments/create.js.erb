<% if @comment.errors.any? %>
  $("#error, #error_explanation").remove();
  $('.comment_content').prepend("<%=escape_javascript(render('layouts/error_messages', :object => @comment))%>");
<% else %>
  $("#error, #error_explanation").remove();
  $(".comments").replaceWith("<%= escape_javascript(render('comments/nested'))%>");
  $('.modal, .modal-backdrop').remove();
<% end %>