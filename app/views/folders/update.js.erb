<% if @folder.errors.any? %>
  $("#error, #error_explanation").remove();
  $('.modal-body').prepend("<%=escape_javascript(render('layouts/error_messages', :object => @folder))%>");
<% else %>
  $(".folders").replaceWith("<%= escape_javascript(render('folders/folders'))%>");
  $('.modal, .modal-backdrop').remove();
<% end %>
